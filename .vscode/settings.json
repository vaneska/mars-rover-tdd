{
    "files.exclude": {
      ".cache": true,
      ".idea": true,
      ".mypy_cache": true,
      ".python-version": true,
      ".scannerwork": true,
      ".sonarlint": true,
      ".vagrant": true,
      ".vscode": true,
      "**/__pycache__": true,
      "**/.cache": true,
      "**/.coverage": true,
      "**/.DS_Store": true,
      "**/.idea": true,
      "**/.mypy_cache": true,
      "**/.pytest_cache": true,
      "**/.sonarlint": true,
      "**/.tox": true,
      "**/.venv": true,
      "**/*.egg-info": true,
      "**/*.py[co]": true,
      "**/*.retry": true,
      "**/coverage*": true,
      "**/dist": true,
      "**/htmlcov": true,
      "**/node_modules": true,
      "**/pip-wheel-metadata": true,
      "**/venv": true,
      "**/srs-docker": true
    },

    "editor.rulers": [79],

    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "79"],
    "python.testing.pytestEnabled": true,


    "python.envFile": "${workspaceFolder}/rover-manager/.env",
    "python.pythonPath": "${workspaceFolder}/rover-manager/.venv/bin/python3.10",

    "python.analysis.extraPaths": [
      "${workspaceFolder}/rover-manager",
      "${workspaceFolder}/rover-manager/.venv/lib/python3.10",
      "${workspaceFolder}/rover-manager/.venv/lib/python3.10/site-packages"
    ],

    "python.autoComplete.extraPaths": [
      "${workspaceFolder}/rover-manager",
      "${workspaceFolder}/rover-manager/.venv/lib/python3.10",
      "${workspaceFolder}/rover-manager/.venv/lib/python3.10/site-packages"
    ],

    "python.sortImports.args": [
      "--settings-path", "${workspaceFolder}/rover-manager",
    ],

    "[python]": {
        "editor.formatOnSave": true
    },
    "python.linting.flake8Path": "${workspaceFolder}/rover-manager/.venv/bin/flake8",
    "python.defaultInterpreterPath": "${workspaceFolder}/rover-manager/.venv/bin/python3.10",
    "python.testing.unittestEnabled": false,
    "python.formatting.blackPath": "${workspaceFolder}/rover-manager/.venv/bin/black",
    "python.testing.pytestPath": "${workspaceFolder}/rover-manager/.venv/bin/pytest",
  }
